{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",
    "_version": "20.1.0",

    "compilerOptions": {
      "lib": ["es2022"],
      "module": "ESNext",
      "target": "ES2022",
      "outDir": "dist",
      "isolatedModules": true,
      "rootDirs":[ "src", "test" ],
      "newLine": "lf",
      "typeRoots": [ "src/typings", "node_modules/@types" ],

      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "Node",

      "importHelpers": true,

      "allowSyntheticDefaultImports":  true
    },
    "exclude": [ "node_modules", "jest.config.ts", "eslint.config.mjs", "test/**/*", "cjs-shim.ts" ],
    "ts-node": {
      "esm": true
    }
  }
